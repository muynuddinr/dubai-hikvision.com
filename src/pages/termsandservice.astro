  overflow: hidden;
}

.home-button::after {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: rgba(255, 255, 255, 0.2);
  transition: all 0.4s ease;
  z-index: -1;
}

.home-button:hover::after {
  left: 100%;
}

@keyframes pulse {
  0% {
    box-shadow: 0 0 0 0 rgba(50, 134, 159, 0.4);
  }
  70% {
    box-shadow: 0 0 0 10px rgba(50, 134, 159, 0);
  }
  100% {

---
import Layout from "../../layouts/Layout.astro";
import aboutus from "../../assets/images/hikvision.webp";

// SEO metadata
const title =
  "About Dubai Hikvision - Leading Security Solutions Provider in Dubai & UAE";
const description =
  "Dubai Hikvision is a trusted provider of advanced security and surveillance solutions in Dubai & UAE, specializing in Hikvision CCTV cameras, NVRs, DVRs, access control, and AI-powered security systems.";
const ogUrl = "https://dubai-hikvision.com/aboutus";

const structuredData = {
  "@context": "https://schema.org",
  "@type": ["AboutPage", "WebPage"],
  headline:
    "About Dubai Hikvision - Leading Security Solutions Provider in Dubai & UAE",
  description:
    "Dubai Hikvision is a trusted provider of advanced security and surveillance solutions in Dubai & UAE, specializing in Hikvision CCTV cameras, NVRs, DVRs, access control, and AI-powered security systems.",
  url: "https://dubai-hikvision.com/aboutus",
  mainEntity: {
    "@type": "LocalBusiness",
    name: "Dubai Hikvision",
    description:
      "Award-winning Hikvision distributor in Dubai & UAE providing cutting-edge security cameras, video surveillance, and smart security solutions since 2010.",
    url: "https://dubai-hikvision.com",
    logo: {
      "@type": "ImageObject",
      url: "https://dubai-hikvision.com/logo.svg",
      width: 300,
      height: 60,
    },
    foundingDate: "2010",
    founders: [
      {
        "@type": "Person",
        name: "Abdul Gafoor",
        jobTitle: "Founder & CEO",
      },
    ],
    address: {
      "@type": "PostalAddress",
      streetAddress: "25th St, Naif - Dubai - United Arab Emirates",
      addressLocality: "Dubai",
      addressRegion: "Dubai",
      postalCode: "123421",
      addressCountry: "AE",
    },
  },
  breadcrumb: {
    "@type": "BreadcrumbList",
    itemListElement: [
      {
        "@type": "ListItem",
        position: 1,
        item: {
          "@id": "https://dubai-hikvision.com",
          name: "Home",
        },
      },
      {
        "@type": "ListItem",
        position: 2,
        item: {
          "@id": "https://dubai-hikvision.com/aboutus",
          name: "About Us",
        },
      },
    ],
  },
};
---

<Layout title={title} description={description} ogUrl={ogUrl} lovosis={structuredData}>
  <section class="relative py-14 overflow-hidden">
    <!-- Gradient background with improved colors -->
    <div
      class="absolute inset-0 bg-gradient-to-r from-[#3a7d8c] to-[#2c5f6b] z-0"
    >
    </div>

    <!-- Decorative elements -->
    <div
      class="absolute top-0 right-0 w-96 h-96 bg-white opacity-5 rounded-full transform translate-x-1/3 -translate-y-1/3"
    >
    </div>
    <div
      class="absolute bottom-0 left-0 w-64 h-64 bg-white opacity-5 rounded-full transform -translate-x-1/4 translate-y-1/4"
    >
    </div>
    <div
      class="absolute top-1/2 left-1/4 w-32 h-32 bg-white opacity-5 rounded-full"
    >
    </div>

    <div class="max-w-7xl mx-auto px-5 relative z-10">
      <div class="text-center">
        <!-- Enhanced heading with animation classes -->
        <h1 class="text-4xl md:text-6xl font-bold mb-6 text-white">
          About <span class="relative inline-block">
            <span class="relative z-10">Us</span>
            <span
              class="absolute bottom-0 left-0 w-full h-3 bg-[#4cb8e4] opacity-50 rounded"
            ></span>
          </span>
        </h1>

        <!-- Improved subheading with better typography -->
        <p
          class="text-2xl max-w-3xl mx-auto text-white/90 font-light leading-relaxed"
        >
          We're on a mission to create innovative solutions that make a
          difference.
        </p>

        <!-- Optional decorative separator -->
        <div class="flex justify-center mt-8">
          <div class="w-24 h-1 bg-white opacity-30 rounded"></div>
        </div>

        <!-- Optional CTA button -->
        <a
          href="#our-story"
          class="inline-flex items-center gap-2 mt-10 px-8 py-3 bg-white/10 hover:bg-white/20 text-white border border-white/30 rounded-full transition duration-300 backdrop-blur-sm"
        >
          Discover Our Story
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="M12 5v14M19 12l-7 7-7-7"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Enhanced Our Story Section with ID added for button functionality -->
  <section id="our-story" class="py-14 relative overflow-hidden">
    <!-- Background accent -->
    <div
      class="absolute top-0 right-0 w-64 h-64 bg-[#4c95ab] opacity-5 rounded-full -mr-32 -mt-32"
    >
    </div>
    <div
      class="absolute bottom-0 left-0 w-96 h-96 bg-[#3a7d8c] opacity-5 rounded-full -ml-48 -mb-48"
    >
    </div>
    <div class="max-w-7xl mx-auto px-5 relative z-10">
      <div class="grid md:grid-cols-2 gap-16 items-center">
        <div class="order-2 md:order-1">
          <h2 class="text-3xl font-bold mb-8 text-[#3a7d8c]">
            Dubai Hikvision
          </h2>

          <div class="space-y-6">
            <p class="leading-relaxed text-lg">
             Looking for premium Hikvision CCTV cameras in Dubai? Hikvision Dubai, a leading wholesale supplier in the UAE, offers high-quality surveillance solutions, including DVRs, NVRs, IP cameras, and advanced security systems for homes and businesses. Experience reliable performance with every Hikvision product.
            </p>

            <p class="leading-relaxed text-lg">
              Why Choose Hikvision?<br />
              Hikvision is a global leader in security solutions, offering:<br
              />
              ✔ High-definition (HD) cameras that capture every detail<br />
              ✔ Night vision and smart motion detection for round-the-clock security<br
              />
              ✔ Sturdy indoor and outdoor cameras suitable for any setting<br
              />
              ✔ PTZ, thermal, and advanced surveillance options
            </p>

            <p class="leading-relaxed text-lg">
              Our Hikvision Offerings in Dubai:<br />
              - Security Cameras (IP, Dome, Bullet, PTZ)<br />
              - DVR & NVR Systems<br />
              - Thermal & AI-Enhanced Cameras<br />
              - Comprehensive CCTV Installation & Support
            </p>

            <div
              class="mt-10 border-l-4 border-[#4c95ab] pl-6 py-2 italic text-gray-700"
            >
              Why Choose Us?<br />
              ✅ The Best Hikvision Prices in Dubai (Wholesale & Retail)<br />
              ✅ Expert Advice & Tailored Solutions<br />
              ✅ A Wide Selection of Authentic Hikvision Products
            </div>
          </div>
        </div>
        <div class="order-1 md:order-2">
          <div class="relative">
            <!-- Main image with enhanced styling -->
            <div
              class="rounded-2xl overflow-hidden shadow-2xl transform transition-all duration-500 hover:shadow-3xl hover:-translate-y-2 relative z-10 border-4 border-gray-200"
            >
              <img
                src={aboutus.src}
                alt="Dubai Hikvision Team"
                class="w-full h-auto block"
              />
            </div>

            <!-- Decorative elements -->
            <div
              class="absolute top-6 -right-6 w-32 h-32 border-4 border-[#4c95ab] rounded-xl opacity-20 z-0"
            >
            </div>
            <div
              class="absolute -bottom-6 -left-6 w-32 h-32 border-4 border-[#3a7d8c] rounded-xl opacity-20 z-0"
            >
            </div>

            <!-- Stats highlight -->
            <div
              class="absolute -bottom-10 right-10 bg-white py-4 px-6 rounded-lg shadow-xl z-20"
            >
              <p class="text-sm text-gray-600">Trusted by</p>
              <p class="text-3xl font-bold text-[#3a7d8c]">5,000+</p>
              <p class="text-sm text-gray-600">clients worldwide</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Our Values Section -->
  <section class="py-14 bg-gray-50">
    <div class="max-w-7xl mx-auto px-5">
      <h2 class="text-4xl font-bold mb-12 text-center">Our Values</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
        <div
          class="bg-white rounded-xl p-8 text-center shadow-lg hover:shadow-2xl hover:-translate-y-3 transition-all duration-500 border-b-4 border-[#4c95ab]"
        >
          <div
            class="w-24 h-24 mx-auto mb-6 flex items-center justify-center bg-gradient-to-br from-pink-400 to-red-500 rounded-full text-white"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-12 w-12"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-3">Innovation</h3>
          <p class="leading-relaxed">
            We constantly push boundaries and explore new technologies to
            enhance security solutions.
          </p>
        </div>

        <div
          class="bg-white rounded-xl p-8 text-center shadow-lg hover:shadow-2xl hover:-translate-y-3 transition-all duration-500 border-b-4 border-[#4c95ab]"
        >
          <div
            class="w-24 h-24 mx-auto mb-6 flex items-center justify-center bg-gradient-to-br from-yellow-400 to-orange-500 rounded-full text-white"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-12 w-12"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
              ></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-3">Collaboration</h3>
          <p class="leading-relaxed">
            We work closely with clients and partners to create tailored
            security systems that meet their needs.
          </p>
        </div>

        <div
          class="bg-white rounded-xl p-8 text-center shadow-lg hover:shadow-2xl hover:-translate-y-3 transition-all duration-500 border-b-4 border-[#4c95ab]"
        >
          <div
            class="w-24 h-24 mx-auto mb-6 flex items-center justify-center bg-gradient-to-br from-green-400 to-teal-500 rounded-full text-white"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-12 w-12"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"
              ></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-3">Reliability</h3>
          <p class="leading-relaxed">
            We deliver dependable surveillance solutions that ensure safety and
            peace of mind.
          </p>
        </div>

        <div
          class="bg-white rounded-xl p-8 text-center shadow-lg hover:shadow-2xl hover:-translate-y-3 transition-all duration-500 border-b-4 border-[#4c95ab]"
        >
          <div
            class="w-24 h-24 mx-auto mb-6 flex items-center justify-center bg-gradient-to-br from-blue-400 to-indigo-500 rounded-full text-white"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-12 w-12"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-3">Excellence</h3>
          <p class="leading-relaxed">
            We strive for excellence in providing cutting-edge security systems
            and exceptional customer service.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact CTA Section -->
  <section
    class="py-20 bg-gradient-to-r from-[#4c95ab] to-[#3a7d8c] text-white text-center"
  >
    <div class="max-w-7xl mx-auto px-5">
      <h2 class="text-4xl font-bold mb-4">Want to Learn More?</h2>
      <p class="text-xl mb-8">
        We'd love to hear from you and discuss how we can help with your
        project.
      </p>
      <a
        href="/contact"
        class="inline-block bg-white text-[#4c95ab] font-semibold py-4 px-8 rounded-full mt-4 hover:-translate-y-1 hover:shadow-lg transition-all duration-300"
        >Get In Touch</a
      >
    </div>
  </section>
</Layout>

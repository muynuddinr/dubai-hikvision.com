---
import Layout from "../../layouts/Layout.astro";
import networkimg from "/src/assets/images/products/network.png";
import nvrimg from "/src/assets/images/products/nvr.png";
import ptzimg from "/src/assets/images/products/ptz.png";
import explosionimg from "/src/assets/images/products/explosion.png";
import banner1 from "/src/assets/images/banner/Productbanner.webp";
import turboimg from "/src/assets/images/products/turbohd.png";
import dvrimg from "/src/assets/images/products/dvr.webp";
import accessimg from "/src/assets/images/products/accesscontrol.webp";
import videointercomimg from "/src/assets/images/products/videointercom.webp";
import { SEO } from "astro-seo";

// SEO metadata

const title =
  "Hikvision Security Products & Solutions | Network Cameras, NVR, PTZ, Explosion Proof & More";
const description =
  "Explore our comprehensive range of Hikvision security solutions including network cameras, NVR systems, PTZ cameras, and explosion-proof equipment. Industry-leading security technology for all your surveillance needs.";
const ogUrl = "https://dubai-hikvision.com/productsnew";
// Hardcoded data for products
const products = [
  {
    id: 1,
    title: "Network Camera",
    description:
      "A network camera provides wireless security monitoring with remote access and recording.",
    image: networkimg,
    link: "/networkcamera",
  },
  {
    id: 2,
    title: "Network Video Recorder",
    description:
      "A Network Video Recorder stores and manages surveillance footage for security monitoring.",
    image: nvrimg,
    link: "/nvr",
  },
  {
    id: 3,
    title: "PTZ Camera",
    description:
      "PTZ cameras offer pan, tilt, zoom for advanced surveillance and security.",
    image: ptzimg,
    link: "/ptzcamera",
  },
  {
    id: 4,
    title: "Explosion Proof",
    description:
      "Explosion-proof cameras ensure safe surveillance in hazardous and high-risk environments.",
    image: explosionimg,
    link: "/explosionproof",
  },
  {
    id: 5,
    title: "TurboHD",
    description:
      "TurboHD cameras offer high-quality video surveillance with fast response times.",
    image: turboimg,
    link: "/turbohd",
  },
  {
    id: 6,
    title: "Access Control",
    description:
      "Access control systems manage and control access to secure areas.",
    image: accessimg,
    link: "/accesscontrol",
  },
  {
    id: 7,
    title: "DVR",
    description:
      "DVRs provide high-quality video recording and storage for security monitoring.",
    image: dvrimg,
    link: "/dvr",
  },
  {
    id: 8,
    title: "Video Intercom",
    description:
      "Video intercom systems provide secure communication and monitoring.",
    image: videointercomimg,
    link: "/videointercom",
  },
];

const features = [
  {
    id: 1,
    title: "Advanced Security",
    description:
      "Experience top-notch encryption and protection that ensures your safety and reliability like never before.",
    icon: "M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z",
  },
  {
    id: 2,
    title: "High Performance",
    description:
      "Experience unparalleled speed, reliability, and efficiency that make your operations run smoothly and effortlessly.",
    icon: "M13 10V3L4 14h7v7l9-11h-7z",
  },
  {
    id: 3,
    title: "Smart Features",
    description:
      "Discover how AI-powered analytics and automation can lead to smart, future-ready solutions that truly make a difference.",
    icon: "M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z",
  },
  {
    id: 4,
    title: "Scalable Solutions",
    description:
      "Discover adaptable systems that evolve alongside your business needs.",
    icon: "M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10",
  },
];
// Generate structured data for the product listing page
const structuredData = {
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  name: title,
  description: description,
  url: "https://dubai-hikvision.com/productsnew",
  mainEntity: {
    "@type": "ItemList",
    itemListElement: products.map((product, index) => ({
      "@type": "ListItem",
      position: index + 1,
      name: product.title,
      url: "https://dubai-hikvision.com" + product.link,
    })),
  },
  breadcrumb: {
    "@type": "BreadcrumbList",
    itemListElement: [
      {
        "@type": "ListItem",
        position: 1,
        name: "Home",
        item: "https://dubai-hikvision.com",
      },
      {
        "@type": "ListItem",
        position: 2,
        name: "Products",
        item: "https://dubai-hikvision.com/productsnew",
      },
    ],
  },
};
---

<Layout
  title={title}
  description={description}
  ogUrl={ogUrl}
  lovosis={structuredData}
>
  <div class="scroll-smooth">
    <!-- Hero Section -->
    <div
      class="relative overflow-hidden bg-gradient-to-r from-teal-800 to-blue-800"
    >
      <div class="absolute inset-0">
        <img
          src={banner1.src}
          alt="Security Background"
          class="w-full h-full object-cover opacity-20"
        />
      </div>

      <div class="relative max-w-7xl mx-auto px-4 sm:px-6 py-16 sm:py-24">
        <div class="text-center">
          <h1
            class="text-4xl sm:text-5xl md:text-6xl font-extrabold tracking-tight text-white mb-6 animate-fade-down"
          >
            <span class="block">Hikvision</span>
            <span class="block text-teal-300"></span>
          </h1>
          <p
            class="max-w-3xl mx-auto text-base sm:text-xl text-teal-100 px-4 animate-fade-up"
          >
            Discover Hikvision’s advanced security solutions in Dubai and the UAE. Enhance protection with reliable Hikvision cameras and smart surveillance systems for homes and businesses.
          </p>
          <div class="mt-8 sm:mt-10 animate-fade-in relative z-10">
            <a
              href="#products"
              class="inline-flex items-center px-6 sm:px-8 py-2 sm:py-3 border border-transparent text-sm sm:text-base font-medium rounded-md text-teal-900 bg-teal-100 hover:bg-teal-200 transition duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-1 relative z-20"
            >
              Explore Products
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-4 w-4 sm:h-5 sm:w-5 ml-2"
                viewBox="0 0 20 20"
                fill="currentColor"
              >
                <path
                  fill-rule="evenodd"
                  d="M10 3a1 1 0 00-1 1v10.586l-3.293-3.293a1 1 0 10-1.414 1.414l5 5a1 1 0 001.414 0l5-5a1 1 0 10-1.414-1.414L11 14.586V4a1 1 0 00-1-1z"
                  clip-rule="evenodd"></path>
              </svg>
            </a>
          </div>
        </div>
      </div>

      <!-- Wave separator -->
      <div class="absolute bottom-0 left-0 right-0">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 1440 120"
          class="w-full"
        >
          <path
            fill="#f9fafb"
            fill-opacity="1"
            d="M0,64L60,64C120,64,240,64,360,74.7C480,85,600,107,720,101.3C840,96,960,64,1080,53.3C1200,43,1320,53,1380,58.7L1440,64L1440,120L1380,120C1320,120,1200,120,1080,120C960,120,840,120,720,120C600,120,480,120,360,120C240,120,120,120,60,120L0,120Z"
          ></path>
        </svg>
      </div>
    </div>

    <main>
      <!-- Header Section -->
      <div class="w-full bg-white py-4 sm:py-6">
        <div class="container mx-auto px-4">
          <h1 class="text-3xl sm:text-4xl font-bold text-center">
            <span class="text-teal-800">Hikvision</span>
            <span class="text-[#32869f]"> Products Solutions</span>
          </h1>
        </div>
      </div>

      <!-- Banner Section -->
      <div class="w-full bg-[#32869f] py-6 sm:py-8">
        <div class="container mx-auto px-4">
          <p
            class="text-white text-center text-base sm:text-xl leading-relaxed"
            id="products"
          >
            <span class="hidden sm:inline"
              >Discover Hikvision’s advanced security solutions in Dubai and the UAE, including network cameras, NVR systems, PTZ cameras, and explosion-proof cameras. As a leading Hikvision distributor, we provide cutting-edge CCTV systems and surveillance equipment for homes and businesses. Enhance protection with reliable Hikvision cameras and smart security systems.</span
            >
            <span class="inline sm:hidden"
              >Explore Hikvision’s security solutions in Dubai and the UAE. Protect homes and businesses with reliable Hikvision cameras and surveillance systems.</span
            >
          </p>
        </div>
      </div>

      <!-- Divider -->
      <div class="w-full flex justify-center items-center my-8">
        <div class="flex items-center">
          <div
            class="w-16 h-1 bg-gradient-to-r from-white via-[#32869f] to-white"
          >
          </div>
          <div class="w-2 h-2 rounded-full bg-[#32869f] mx-2"></div>
          <div
            class="w-16 h-1 bg-gradient-to-r from-white via-[#32869f] to-white"
          >
          </div>
        </div>
      </div>

      <!-- Products Section -->
      <div class="container mx-auto px-4 py-8">
        <div
          class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 sm:gap-8"
        >
          {
            products.map((product) => (
              <div class="bg-white rounded-lg shadow-md overflow-hidden transition-all duration-300 hover:shadow-lg group relative border-2 border-gray-100 hover:border-gray-200">
                <a href={product.link} class="absolute inset-0 z-10" aria-label={`View details for ${product.title}`}></a>
                <div class="relative p-0 flex justify-center items-center w-full h-48 sm:h-56 overflow-hidden">
                  <img
                    src={product.image.src}
                    alt={product.title}
                    class="w-auto h-full max-h-full object-contain p-3 sm:p-4"
                  />
                </div>
                <div class="p-4 sm:p-5 relative">
                  <h2 class="text-lg sm:text-xl font-bold text-center text-teal-800 mb-2 sm:mb-3">
                    {product.title}
                  </h2>
                  <p class="text-gray-600 text-center text-xs sm:text-sm mb-3 sm:mb-4">
                    {product.description}
                  </p>
                  <div class="flex justify-center">
                    <a
                      href={product.link}
                      class="inline-flex items-center text-[#32869f] hover:text-teal-800 font-medium text-sm transition-all duration-300 group/btn relative z-20"
                    >
                      <span class="relative">
                        View Products
                        <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-[#32869f] group-hover/btn:w-full transition-all duration-300" />
                      </span>
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="h-4 w-4 sm:h-5 sm:w-5 ml-2"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M14 5l7 7m0 0l-7 7m7-7H3"
                        />
                      </svg>
                    </a>
                  </div>
                </div>
              </div>
            ))
          }
        </div>
      </div>

      <!-- Features Section -->
      <div class="bg-gradient-to-b from-white to-gray-50 py-12 sm:py-16">
        <div class="container mx-auto px-4">
          <h2
            class="text-2xl sm:text-3xl font-bold text-center text-teal-800 mb-8 sm:mb-12"
          >
            Why Choose Us?
          </h2>
          <div
            class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 sm:gap-8"
          >
            {
              features.map((feature) => (
                <div class="bg-white p-5 sm:p-6 rounded-lg shadow-md hover:shadow-lg transition duration-300 transform hover:-translate-y-1 border-2 border-gray-100 hover:border-gray-200">
                  <div class="w-12 h-12 sm:w-14 sm:h-14 bg-[#32869f]/10 rounded-full flex items-center justify-center mb-3 sm:mb-4 mx-auto">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="h-6 w-6 sm:h-8 sm:w-8 text-[#32869f]"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d={feature.icon}
                      />
                    </svg>
                  </div>
                  <h3 class="text-base sm:text-lg font-semibold text-center text-teal-800 mb-2">
                    {feature.title}
                  </h3>
                  <p class="text-gray-600 text-center text-xs sm:text-sm">
                    {feature.description}
                  </p>
                </div>
              ))
            }
          </div>
        </div>
      </div>

      <!-- CTA Section -->
      <div class="bg-[#32869f] py-12 sm:py-16">
        <div class="container mx-auto px-4 text-center">
          <h2 class="text-2xl sm:text-3xl font-bold text-white mb-4 sm:mb-6">
            Ready to enhance your security infrastructure?
          </h2>
          <p
            class="text-teal-100 max-w-2xl mx-auto mb-6 sm:mb-8 text-sm sm:text-base"
          >
            Contact our team of experts today to discover the perfect Hikvision
            solution for your specific requirements.
          </p>
          <a
            href="/contact"
            class="inline-block px-6 sm:px-8 py-2 sm:py-3 bg-white text-[#32869f] font-semibold rounded-md hover:bg-teal-50 transition duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-1 text-sm sm:text-base"
          >
            Get in Touch
          </a>
        </div>
      </div>
    </main>
  </div>
</Layout>

<script>
  // Add intersection observer for scroll animations
  document.addEventListener("DOMContentLoaded", () => {
    const animatedElements = [
      ...document.querySelectorAll(".rounded-lg"),
      ...document.querySelectorAll(".bg-white.p-6"),
    ];

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add("animate-fade-up");
            observer.unobserve(entry.target);
          }
        });
      },
      { threshold: 0.1 },
    );

    animatedElements.forEach((element) => {
      observer.observe(element);
    });

    // Add hover effect for cards
    const cards = document.querySelectorAll(".rounded-lg");
    cards.forEach((card) => {
      card.addEventListener("mouseenter", () => {
        (card as HTMLElement).style.transform = "translateY(-10px) scale(1.03)";
        (card as HTMLElement).style.boxShadow =
          "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)";
      });

      card.addEventListener("mouseleave", () => {
        (card as HTMLElement).style.transform = "";
        (card as HTMLElement).style.boxShadow = "";
      });
    });

    // Smooth scroll for Explore Products button
    const exploreButton = document.querySelector('a[href="#products"]');
    if (exploreButton) {
      // Fix potential z-index issues
      (exploreButton as HTMLElement).style.position = "relative";
      (exploreButton as HTMLElement).style.zIndex = "50";

      // Use mouseover instead of mouseenter (more sensitive)
      exploreButton.addEventListener("mouseover", (event) => {
        event.stopPropagation();
        (exploreButton as HTMLElement).classList.add("bg-teal-200");
        (exploreButton as HTMLElement).style.transform = "translateY(-4px)";
        (exploreButton as HTMLElement).style.boxShadow =
          "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)";
      });

      // Use mouseout to pair with mouseover
      exploreButton.addEventListener("mouseout", (event) => {
        event.stopPropagation();
        (exploreButton as HTMLElement).classList.remove("bg-teal-200");
        (exploreButton as HTMLElement).style.transform = "";
        (exploreButton as HTMLElement).style.boxShadow = "";
      });

      exploreButton.addEventListener("click", (e) => {
        e.preventDefault();
        const target = document.querySelector("#products");
        if (target) {
          target.scrollIntoView({ behavior: "smooth" });
        }
      });
    }
  });
</script>

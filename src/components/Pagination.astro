---
const { currentPage = 1, totalPages = 1 } = Astro.props;
---

<div class="pagination flex justify-center my-8">
  <div class="flex items-center gap-2 bg-white px-2 py-2 rounded-full shadow-lg">
    <a 
      href="#"
      data-page="prev"
      class="flex items-center justify-center w-10 h-10 rounded-full bg-gray-100 hover:bg-gray-200 transition-colors"
      aria-label="Previous page"
    >
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
      </svg>
    </a>
    
    {Array.from({ length: totalPages }, (_, i) => i + 1).map((page) => (
      <a
        href="#"
        data-page={page}
        class={`flex items-center justify-center w-10 h-10 rounded-full transition-colors ${
          page === currentPage 
            ? 'bg-[#0891b2] text-white' 
            : 'bg-white hover:bg-gray-100'
        }`}
        aria-label={`Page ${page}`}
        aria-current={page === currentPage ? 'page' : undefined}
      >
        {page}
      </a>
    ))}
    
    <a 
      href="#"
      data-page="next"
      class="flex items-center justify-center w-10 h-10 rounded-full bg-gray-100 hover:bg-gray-200 transition-colors"
      aria-label="Next page"
    >
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
      </svg>
    </a>
  </div>
</div>